<h1>Sign up</h1>

<%= form_for(@user) do |f| %>

	<%= render 'shared/error_messages' %>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field"><br />
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field"><br />
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	<div class="field"><br />
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation %>
	</div>
	<div class="action">
		<%= f.submit "Sign up" %>
	</div>
<% end %>